{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "next/core-web-vitals",
      "plugin:react/recommended",
      "standard"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "react-hooks"
  ],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "semi": ["error", "always"],
      "space-before-function-paren": ["error", {
          "named": "never",
          "anonymous": "always"
      }],
      "indent": "off",
      "quotes": ["error", "double"]
  }
}
